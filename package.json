{
  "name": "shopify-front-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for the large Shopify repo",
  "main": "webpack.config.js",
  "scripts": {
    "build": "webpack --progress",
    "build:prod": "webpack --progress --mode=\"production\"",
    "watch": "webpack --watch --progress",
    "watch:prod": "webpack --watch --progress --mode=\"production\"",
    "test": "jest",
    "theme": "shopify-themekit",
    "theme:watch": "shopify-themekit watch --allow-live --env development",
    "theme:watch:prod": "shopify-themekit watch --allow-live --env production",
    "theme:deploy": "shopify-themekit deploy --env development",
    "theme:deploy:prod": "shopify-themekit deploy --env production",
    "lint": "npx eslint ./src && npx stylelint ./src",
    "lint:fix": "npx eslint ./src --fix && npx stylelint ./src --fix",
    "deploy": "npm run lint && npm run build && npm run theme:deploy",
    "deploy:prod": "npm run lint && npm run build:prod && npm run theme:deploy:prod",
    "start": "concurrently \"npm run watch\" \"npm run theme:watch\"",
    "start:prod": "concurrently \"npm run watch:prod\" \"npm run theme:watch:prod\"",
    "gen": "yo ./generator",
    "pre-commit": "npm run lint:fix && lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kreezag/shopify-front-boilerplate.git"
  },
  "keywords": [
    "Boilerplate",
    "Codestyle",
    "Jest",
    "Shopify",
    "Shopify Theme Kit",
    "Scss",
    "Webpack"
  ],
  "author": "Kreezag",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kreezag/shopify-front-boilerplate/issues"
  },
  "homepage": "https://github.com/Kreezag/shopify-front-boilerplate#readme",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/runtime": "^7.13.10",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.2",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "gulp-rename": "1.2.2",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.4.1",
    "postcss": "^8.2.10",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.1",
    "remove-files-webpack-plugin": "^1.4.4",
    "sass": "^1.32.10",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "yeoman-generator": "^5.4.0",
    "yo": "^4.2.0"
  },
  "dependencies": {
    "@shopify/themekit": "^1.1.7",
    "lodash": "^4.17.21"
  },
  "lint-staged": {
    "*.js": "npx eslint --fix"
  }
}
